<!-- ./views/index.handlebars -->
<div class="container mt-5">
 <!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

 <a href="/restaurants/new" class="btn btn-major mb-3">新增餐廳</a>

<!-- restaurant list -->
<div class="container mt-5">
    <div class="row justify-content-center" id="data-panel"> 

    {{#each restaurants}}
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card">
            <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
            <div class="card-body restaurant-item-body">         
              <h6 class="card-title">{{this.name}}</h6>
              <h6 class="card-title">{{this.category}}</h6>
              <h6 class="card-title">{{this.rating}}</h6>

            </div>
          </div>
        </a>
        <div class="d-flex justify-content-around mt-2">
          <a href="./restaurants/{{ this._id }}">detail</a>
          <a href="./restaurants/{{ this._id }}/edit">edit</a>
     
          <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit">delete</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</div>
