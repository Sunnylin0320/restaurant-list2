<div class="container py-5">
  <div class="text-center">
    <h1 class="mb-4">{{restaurant.name}}</h1>
    <a href="/restaurants/{{ restaurant._id }}/edit">edit</a><!-- 加入這行 -->
    <form action="/restaurants/{{ restaurant._id }}?_method=DELETE" method="POST" style="display: inline;">
  <button type="submit">delete</button>
</form>
    <img class="rounded mb-4" src="{{restaurant.image}}" alt="Card image cap" style="max-height: 300px;">
  </div>
  <div class="row">
    <div class="col-12 col-md-10 col-lg-8 mx-auto">
      <p class="text-secondary mb-1">
        <strong>分類:</strong>
        {{restaurant.category}}
      </p>

      <p class="text-secondary mb-1">
        <strong>評分:</strong>
        {{restaurant.rating}}
      </p>

      <p class="text-secondary mb-1">
        <strong>電話:</strong>
        {{restaurant.phone}}
      </p>

      <p class="text-secondary mb-1">
        <strong>地址:</strong>
        {{restaurant.location}}
      </p>

      <p class="text-secondary mb-1">
        <strong>特色描述:</strong>
        {{restaurant.description}}
      </p>
      
      <p class="text-secondary mb-1">
        <strong>圖片網址:</strong>
        {{restaurant.image}}
      </p>

      <p class="text-secondary mb-1">
        <strong>Google Map網址:</strong>
        {{restaurant.google_map}}
      </p>
    </div>
  </div>
</div>